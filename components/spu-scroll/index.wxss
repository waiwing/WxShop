.container{
    box-sizing: border-box;
    width: 100%;
    padding: 42rpx 0 34rpx 28rpx;
    background-color: white;
}

.title {
    width: 694rpx;
    height: 90rpx;
}

.price-unit {
    font-size: 28rpx !important;
    color: #157658;
}


.price-value {
    font-size: 32rpx !important;
    color: #157658;
}

.spu-img {
    width: 160rpx;
    height: 160rpx;
}
.spu-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 60rpx;
}
.scroll-view{
    display: flex;
    flex-direction: row;
    margin-top: 28rpx;
}

.inner-container{
    display: flex;
    flex-direction: row;
}
.spu-text {
    font-size: 20rpx;
    color: #666666;
    margin-top: 20rpx;
}